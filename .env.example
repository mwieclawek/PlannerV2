# =============================================================================
# PlannerV2 Environment Configuration Template
# Copy this file to .env and fill in the values.
# NEVER commit .env to version control.
# =============================================================================

# ── Security ──────────────────────────────────────────────────────────────────
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=change-me-in-production-use-openssl-rand-hex-32

# PIN required to register manager accounts
MANAGER_REGISTRATION_PIN=change-me-in-production

# Access token lifetime in minutes (default: 60)
# ACCESS_TOKEN_EXPIRE_MINUTES=60

# Refresh token lifetime in days (default: 7)
# REFRESH_TOKEN_EXPIRE_DAYS=7

# ── CORS ──────────────────────────────────────────────────────────────────────
# Comma-separated list of allowed origins for the frontend
ALLOWED_ORIGINS=http://localhost:5000,http://127.0.0.1:5000

# ── Database ──────────────────────────────────────────────────────────────────
# SQLite (development / CI)
DATABASE_URL=sqlite:///./planner.db

# PostgreSQL (production) — uncomment and fill in:
# DATABASE_URL=postgresql+psycopg2://user:password@host:5432/planner

# ── Google Calendar OAuth ─────────────────────────────────────────────────────
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=postmessage
